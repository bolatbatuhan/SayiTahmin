<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.batuhanb.sayitahmin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sayi_tahmin_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sayi_tahmin_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.batuhanb.sayitahmin.OyunSonucActivity"></activity>
        <activity android:name="com.batuhanb.sayitahmin.OyunEkranActivity" />
        <activity android:name="com.batuhanb.sayitahmin.MainActivity" />
        <activity
            android:name="com.batuhanb.sayitahmin.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>